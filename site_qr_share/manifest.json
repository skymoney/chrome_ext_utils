{
  "manifest_version": 2,

  "name": "site qr code share",
  "description": "convert site to qr code for sharing",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "site share",
    "default_popup": "popup.html"
  },

  "background": {"scripts": ["site_share.js"]},

  "permissions": [
    "tabs"
  ]
}
